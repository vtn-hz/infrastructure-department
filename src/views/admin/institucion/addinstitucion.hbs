
<form action="/add/institucion" method="POST">
    <div class="container">
        <h2>INGRESE</h2>
        <div class="row">   
            <div class="col-1">
                <label for="NAME">Nivel/Modalidad: </label>
            </div>
            <div class="col">
                <div class="container">
                    <div class="row">
                        <div class="col-1">
                            <input  class="form-check-input" type="radio" id="jardin" name="NIVEL" value="1" required> <label class="form-label">Jardin </label>
                        </div>
                        <div class="col">
                            <input  class="form-check-input" type="radio" id="primaria" name="NIVEL" value="2"> <label class="form-label">Escuela Primaria </label>
                        </div>
                        <div class="col">
                            <input  class="form-check-input" type="radio" id="secundaria" name="NIVEL" value="3"> <label class="form-label">Escuela Secundaria </label>
                        </div>
                        <div class="col">
                            <input  class="form-check-input" type="radio" id="adultos" name="NIVEL" value="4"> <label class="form-label">Adultos </label>
                        </div>
                        <div class="col">
                            <input  class="form-check-input" type="radio" id="especial" name="NIVEL" value="5"> <label class="form-label">Escuela Especial </label>
                        </div>
                        <div class="col-3">
                            <input  class="form-check-input" type="radio" id="psicologia" name="NIVEL" value="6"> <label class="form-label">Escuela de Psicologia </label>      
                        </div>
                                     
  
                    </div>
                </div>
                

               
            </div>
        </div>
        <br><br>
        <div class="row">
            <div class="col-2">
               <label class="form-label">DATOS ESPECIFICOS:</label>   
            </div>
            <div class="col">           
                 <div class="input-group">
           
                    <input type="text" name="CUE" id="CUE" class="form-control" placeholder="CUE" required>
                    <input type="text" name="ESTABLECIMIENTO" id="ESTABLECIMIENTO"  class="form-control" placeholder="Codigo de establecimiento..." required>
                </div>
            </div>
            
               
        </div>
        <br>
        <div class="row">
            <div class="col-2">
                <label class="form-label">Nombre Escuela: </label>
            </div>
            <div class="col">
                <input type="text" name="nombre_escuela" id="nombre_escuela" class="form-control">
            </div>
            <div class="col-6">

            </div>
        </div>

        <br>
        <div class="row">
            <div class="col-2">
                <label class="form-label">Direccion: </label> 
            </div>

            <div class="col-6">
                <div class="input-group">
                    <input placeholder="Calle" name="nmb_calle" id="nmb_calle" class="form-control">  
                    <input placeholder="Nro" type="number" name="nro_calle" id="nro_calle" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-2">

            </div>
            <div class="col">
                <input type="radio" id="mdp" name="LOCALIDAD" value="1" required> <label>Mar del Plata</label>
                <input type="radio" id="batan" name="LOCALIDAD" value="2"> <label>Batan</label>
                <input type="radio" id="santaclara" name="LOCALIDAD" value="3"> <label>Santa Clara</label>
                <input type="radio" id="santaclara" name="LOCALIDAD" value="4"> <label>Laguna de los Padres</label>
            </div>
        </div>

        <br>
        <div class="row">
            <div class="col-2">
                <label>Numero de Telefono de la Escuela: </label>
            </div>

            <div class="col-4">
                <input placeholder="Telefono" type="number" name="telefono_escuela" class="form-control" required> 
            </div>
        </div>
        <br><br><br>
        <div class="row">
            <div class="col-2">
                <label>Director:</label>
            </div>
            <div class="col-4">
                <select  class="form-select" name="directores" id="directores">
                    <option selected disabled>Escoja Director</option>
                    {{#each director}}
                    <option value="{{ID_ENCARGADO}}">{{nombre}} {{apellido }}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col">
                <div class="input-group">
                    <input value="" disabled placeholder="Telefono" class="form-control">
                    <input value="" disabled placeholder="Email" class="form-control">
                </div>
            </div>

        </div>
        <br>
        <div class="row">
            <div class="col-2">
                <label>Inspector:</label>
            </div>
            <div class="col-4">
                <select class="form-select" name="inspectores" id="inspectores">
                    <option selected disabled>Escoja Director</option>
                    {{#each inspector}}
                    <option value="{{ID_ENCARGADO}}">{{nombre}} {{apellido }}</option>
                    {{/each}}
                </select>
            </div>

            <div class="col">
                <div class="input-group">
                    <input value="" disabled placeholder="Telefono" class="form-control">
                    <input value="" disabled placeholder="Email" class="form-control">
                </div>
            </div>
        </div>

        <br><br><input class="btn btn-success" type="submit" value="AGREGAR">

    </div>



   
    
   
    <!-- Estaria bueno que toda la informaciÃ³n segun el selected se ponga en ese input... Si ven esto me avisan y me ayudan a hacerlo-->
    <br><br>
    
    
</form> 